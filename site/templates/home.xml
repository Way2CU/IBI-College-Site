<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<cms:svg file="site-sprite.svg"/>
			<header>
				<div>
					<span class="logo">
						<img 
							src="_BASEURL.'/site/images/logo.svg'"
							alt="ibi"
							cms:eval="src"
						/>
					</span>

					<article>
						<cms:module 
							name="articles"
							action="show"
							text_id="header_article"
							template="parts/header_article.xml"
						/>
					</article>
				</div>
				<div class="form_container">
					<h4><cms:text constant="title_form"/></h4>
					<cms:module 
						name="contact_form"
						action="show"
						text_id="contact_form"
					/>	
				</div>
			</header>
			<section id="features">
					<cms:module
						name="articles"
						action="show_group"
						text_id="features"
						template="parts/group_title.xml"
					/>
				<ul>
					<cms:module
						name="articles"
						action="show_list"
						group="features"
						template="parts/features.xml"
					/>
				</ul>
				
				<cms:module 
					name="articles"
					action="show"
					text_id="what_you_get"
					template="parts/article.xml"
				/>
				
			</section>
		</body>
	</html>
</document>
