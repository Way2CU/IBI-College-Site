<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:script src="_BASEURL.'/site/scripts/floatin_form.js'" cms:eval="src"/>
			<cms:script src="_BASEURL.'/site/scripts/position_animation.js'" cms:eval="src"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>
		<body>
			<cms:svg file="site-sprite.svg"/>
			<header>
				<div>
					<span class="logo">
						<img 
							src="_BASEURL.'/site/images/logo.svg'"
							alt="ibi"
							cms:eval="src"
						/>
					</span>
					<article>
						<cms:module 
							name="articles"
							action="show"
							text_id="header_article"
							template="parts/header_article.xml"
						/>
					</article>
				</div>
			</header>
			<cms:desktop>
				<div class="form_container">
					<h4><cms:text constant="title_form"/></h4>
					<cms:module 
						name="contact_form"
						action="show"
						text_id="contact_form"
					/>	
				</div>	
				<section id="features">
						<cms:module
							name="articles"
							action="show_group"
							text_id="features"
							template="parts/group_title.xml"
						/>
					<ul>
						<cms:module
							name="articles"
							action="show_list"
							group="features"
							template="parts/features.xml"
						/>
					</ul>
					
					<cms:module 
						name="articles"
						action="show"
						text_id="what_you_get"
						template="parts/article.xml"
					/>
					<cms:module 
						name="articles"
						action="show"
						text_id="article_instructor"
						template="parts/article.xml"
					/>
					<img 
						src="_BASEURL.'/site/images/reuven.png'"
						alt="Reuven-Mizravgit "
						cms:eval="src"
					/>
				</section>
				<section id="subjects">
					<cms:module 
						name="articles"
						action="show"
						text_id="article_subjects"
						template="parts/article.xml"
					/>
				</section>
			</cms:desktop>
			<cms:mobile>
				<div class="form_container">
					<h4><cms:text constant="title_form"/></h4>
					<cms:module 
						name="contact_form"
						action="show"
						text_id="contact_form"
					/>	
				</div>
				<section id="features">
							<cms:module
								name="articles"
								action="show_group"
								text_id="features"
								template="parts/group_title.xml"
							/>
						<ul>
							<cms:module
								name="articles"
								action="show_list"
								group="features"
								template="parts/features.xml"
							/>
						</ul>
				</section>
				<section id="articles">
					<cms:module 
							name="articles"
							action="show"
							text_id="what_you_get"
							template="parts/article.xml"
						/>
						<cms:module 
							name="articles"
							action="show"
							text_id="article_instructor"
							template="parts/article.xml"
						/>
						<img 
							src="_BASEURL.'/site/images/reuven.png'"
							alt="Reuven-Mizravgit "
							cms:eval="src"
						/>
				</section>
					<cms:module 
						name="articles"
						action="show"
						text_id="article_subjects"
						template="parts/article.xml"
					/>
			</cms:mobile>
			<footer>
				<div>
					<span class="logo">
						<img 
							src="_BASEURL.'/site/images/logo.svg'"
							alt="ibi"
							cms:eval="src"
						/>
					</span>
					<article>
						<cms:module 
							name="articles"
							action="show"
							text_id="header_article"
							template="parts/header_article.xml"
						/>
					</article>
				</div>
				<cms:mobile>
					<div class="form_container">
						<h4><cms:text constant="title_form"/></h4>
						<cms:module 
							name="contact_form"
							action="show"
							text_id="contact_form"
						/>	
					</div>
				</cms:mobile>
				<cms:template file="stock/copyright.xml">
						<param name="holder" value="copyright_holder"/>
						<param name="text" value="copyright_text"/>
						<param name="light" value=""/>
				</cms:template>
			</footer>
		</body>
	</html>
</document>